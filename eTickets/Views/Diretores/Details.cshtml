@model Diretor

@{
    ViewData["Title"] = "Detalhes do diretor";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Detalhes de @Model.Nome</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="rounded-circle" id="FotoPerfilPreview" />
                </div>
                <div class="form-group">
                    <label class="col-form-label">Foto URL</label>
                    <input asp-for="FotoPerfilURL" class="form-control" readonly />
                    <span asp-validation-for="FotoPerfilURL" class="text-danger "></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="col-form-label"></label>
                    <input asp-for="Nome" class="form-control" readonly />
                    <span asp-validation-for="Nome" class="text-danger "></span>
                </div>
                <div class="form-group">
                    <label asp-for="Biografia" class="col-form-label"></label>
                    <input asp-for="Biografia" class="form-control" readonly />
                    <span asp-validation-for="Biografia" class="text-danger "></span>
                </div>
                <div class="form-group col-form-label">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Mostrar Todos</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('FotoPerfilPreview');
            output.src = $("#FotoPerfilURL").val();
            $("img").css({ "width": "150px", "height": "150px", "object-position": "0% 15%", "object-fit": "cover" });
        })
    </script>
}