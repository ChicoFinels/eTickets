@model Cinema

@{
    ViewData["Title"] = "Detalhes do cinema";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Detalhes de @Model.Nome</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="rounded-circle" id="LogoPreview" />
                </div>
                <div class="form-group">
                    <label class="col-form-label">Logo URL</label>
                    <input asp-for="LogoURL" class="form-control" readonly />
                    <span asp-validation-for="LogoURL" class="text-danger "></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="col-form-label"></label>
                    <input asp-for="Nome" class="form-control" readonly />
                    <span asp-validation-for="Nome" class="text-danger "></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="col-form-label"></label>
                    <input asp-for="Descricao" class="form-control" readonly />
                    <span asp-validation-for="Descricao" class="text-danger "></span>
                </div>
                <div class="form-group col-form-label">
                    <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Mostrar Todos</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#LogoURL").val();
            $("img").css({ "width": "150px", "height": "150px" });
        })
    </script>
}