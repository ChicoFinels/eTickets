@using eTickets.Data.Enums;
@model CreateMovie

@{
    ViewData["Title"] = "Criar um novo Filme";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Criar um novo Filme</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DataInicial" class="control-label"></label>
                                <input asp-for="DataInicial" type="date" class="form-control" />
                                <span asp-validation-for="DataInicial" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DataFinal" class="control-label"></label>
                                <input asp-for="DataFinal" type="date" class="form-control" />
                                <span asp-validation-for="DataFinal" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Preco" class="control-label"></label>
                                <input asp-for="Preco" type="number" class="form-control" />
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImagemURL" class="control-label"></label>
                                <input asp-for="ImagemURL" class="form-control" />
                                <span asp-validation-for="ImagemURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Cinema" class="control-label"></label>
                                <select asp-for="Cinema" class="form-control" asp-items="ViewBag.Cinemas"></select>
                                <span asp-validation-for="Cinema" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Categoria" class="control-label"></label>
                                <select asp-for="Categoria" class="form-control" asp-items="Html.GetEnumSelectList<Categoria>()"></select>
                                <span asp-validation-for="Categoria" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Diretor" class="control-label"></label>
                                <select asp-for="Diretor" class="form-control" asp-items="ViewBag.Diretores"></select>
                                <span asp-validation-for="Diretor" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Atores" class="control-label"></label>
                                <select asp-for="Atores" class="form-control" asp-items="ViewBag.Atores" multiple></select>
                                <span asp-validation-for="Atores" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Descricao" class="control-label"></label>
                                <textarea asp-for="Descricao" class="form-control"></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Mostrar Todos</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $("#ImagemURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}