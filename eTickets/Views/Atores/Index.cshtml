@model IEnumerable<Ator>

@{
    ViewData["Title"] = "Atores";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.FotoPerfilURL)</th>
                    <th>@Html.DisplayNameFor(model=>model.Nome)</th>
                    <th>@Html.DisplayNameFor(model=>model.Biografia)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.FotoPerfilURL" alt="@item.Nome" style="width:150px; height:200px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.Nome)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.Biografia)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Editar</a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Detalhes</a>
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
